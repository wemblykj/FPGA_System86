#ifndef COMPONENT_H_
#define COMPONENT_H_

#include "xbasic_types.h"

class Component {
public:
	Component(Xuint32 baseAddress);
	virtual ~Component();

	Xuint32 GetBaseAddress() { return m_baseAddress; }

	Xuint32 GetControl();
	void SetControl(Xuint32 control);

	bool GetEnabled();
	void SetEnabled(bool enable);

	bool GetReset();
	void SetReset(bool reset);

	void ReportSettings();
};

#endif /* COMPONENT_H_ */
