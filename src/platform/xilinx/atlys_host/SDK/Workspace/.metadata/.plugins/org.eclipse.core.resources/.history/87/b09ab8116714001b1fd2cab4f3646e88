int XAxiVdma_SetupIntrSystem(XAxiVdma *AxiVdmaPtr, u16 ReadIntrId,
				u16 WriteIntrId);

void XAxiVdma_EnableIntrSystem(u16 ReadIntrId, u16 WriteIntrId);
void XAxiVdma_DisableIntrSystem(u16 ReadIntrId, u16 WriteIntrId);

